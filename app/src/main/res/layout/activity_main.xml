<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="60dp"
            android:textStyle="bold"
            android:padding="15dp"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/light_grey_button"
            android:text="AC"
            android:onClick="ClearOneCharFunc"
            android:textSize="30sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonDel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/light_grey_button"
            android:onClick="ClearFunc"
            android:text="Del"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonSign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/light_grey_button"
            android:text="+/-"
            android:onClick="PlusMinusFunc"
            android:textSize="30sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/action_button_design"
            android:text="+"
            android:onClick="ActsFunc"
            android:textSize="30sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- שורה 7 8 9 - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/num_design"
            android:onClick="funcButtonClick"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/num_design"
            android:onClick="funcButtonClick"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/num_design"
            android:onClick="funcButtonClick"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/action_button_design"
            android:text="-"
            android:onClick="ActsFunc"
            android:textSize="30sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- שורה 4 5 6 × -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/num_design"
            android:onClick="funcButtonClick"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/num_design"
            android:onClick="funcButtonClick"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/num_design"
            android:onClick="funcButtonClick"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/buttonDouble"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/action_button_design"
            android:text="X"
            android:onClick="ActsFunc"
            android:textSize="26sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- שורה 1 2 3 ÷ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/num_design"
            android:onClick="funcButtonClick"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/num_design"
            android:onClick="funcButtonClick"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/num_design"
            android:onClick="funcButtonClick"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/action_button_design"
            android:text="/"
            android:onClick="ActsFunc"
            android:textSize="30sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- שורה 0 = -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/num_design"
            android:onClick="funcButtonClick"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/action_button_design"
            android:text="="
            android:onClick="EqualFunc"
            android:textSize="30sp"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
